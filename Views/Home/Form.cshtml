@model AppointmentViewModel

<div class="container">

    <div class="row mt-2">

        <div class="col-12" align="center">
            <h2>Confirm Reservation</h2>
            <br />
            <br />
        </div>

    </div>

    <div class="row" align="center">
        <div class="col-12 col-sm-5 card m-auto p-3">
            <h4>Group Details</h4>
            <form asp-action="Confirm" method="post" class="form-group" >
                
                <div class="form-group">

                    <div class="form-group row">
                        <label asp-for="Appointment.Datetime" class="col-sm-4 col-form-label">Time of Tour: </label>
                        <div class="col-sm-8">
                            <input asp-for="Appointment.Datetime" readonly class="form-control-plaintext" value="@Model.Time.DayOfWeek @Model.Time.Time" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Appointment.GroupName" class="col-sm-4 col-form-label">Name of Group: </label> 
                        <div class="col-sm-8">
                            <input asp-for="Appointment.GroupName" class="form-control" type="text" /><br />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Appointment.GroupSize" class="col-sm-4 col-form-label">Size of Group: </label> 
                        <div class="col-sm-8">
                            <input asp-for="Appointment.GroupSize" class="form-control" type="number" /><br />
                        </div>
                    </div>

                    <h5>Contact Information</h5>
                    <div class="form-group">
                        <div class="form-group row">
                            <label asp-for="Appointment.Email" class="col-sm-4 col-form-label">Email: </label> 
                            <div class="col-sm-8">
                                <input asp-for="Appointment.Email" class="form-control" type="email" /><br />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Appointment.PhoneNumber" class="col-sm-4 col-form-label">Phone Number: </label> 
                            <div class="col-sm-8">
                                <input asp-for="Appointment.PhoneNumber" class="form-control" type="text" /> <br />
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">
                        Confirm Reservation
                    </button>
            </form>
            <br />
            <br />
            <div asp-validation-summary="All"></div>
            <br />
        </div>
    </div>
</div>



